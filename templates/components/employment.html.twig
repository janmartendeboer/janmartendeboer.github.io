{% block employment_organization %}
    <svg xmlns="http://www.w3.org/2000/svg" class="h-0">
        <defs>
            <symbol id="office-icon-{{ this.employment.id }}">
                <svg>
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M3.75 21h16.5M4.5 3h15M5.25 3v18m13.5-18v18M9 6.75h1.5m-1.5 3h1.5m-1.5 3h1.5m3-6H15m-1.5 3H15m-1.5 3H15M9 21v-3.375c0-.621.504-1.125 1.125-1.125h3.75c.621 0 1.125.504 1.125 1.125V21" />
                </svg>
            </symbol>
        </defs>
    </svg>

    {% set imageWidth = 64 %}
    <div class="overflow-hidden">
        <div class="py-5">
            <div class="flex">
                {% block employment_employer_logo %}
                    <div class="mr-4 flex-shrink-0">
                        {% if this.employment.employer.logo %}
                            {{ this.employment.employer.logo|image(
                                width = imageWidth,
                                height = 'auto',
                                alt = this.employment.employer.name
                            ) }}
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 24 24"
                                 fill="none"
                                 stroke-width="1.5"
                                 stroke="currentColor"
                                 class="text-blue-600"
                                 width="{{ imageWidth }}px"
                                 height="{{ imageWidth }}px"
                            >
                                {{ asset('img/icons/office.svg')|use }}
                            </svg>
                        {% endif %}
                    </div>
                {% endblock %}

                <div class="self-center">
                    {% block employment_title %}
                        <h3 class="text-lg font-medium leading-6 text-gray-900">{{ this.employment.title }}</h3>
                    {% endblock %}

                    {% block employment_employer_name %}
                        <div>{{ this.employment.employer.name }}</div>
                    {% endblock %}

                    {% block employment_period %}
                        <div class="text-gray-400">
                            {% block employment_period_start %}
                                <span>
                                    {{ this.employment.startAt|date('M Y') }}
                                </span>
                            {% endblock %}

                            &hyphen;

                            {% block employment_period_end %}
                                <span>
                                    {{ this.employment.endAt
                                    ? this.employment.endAt|date('M Y')
                                    : 'employment.present'|trans
                                    }}
                                </span>
                            {% endblock %}

                            &hyphen;

                            {% block employment_period_duration %}
                                <span>{{ this.employment|duration|trans }}</span>
                            {% endblock %}
                        </div>
                    {% endblock %}

                    {% block employment_description %}
                        <div class="text-gray-600 py-2 leading-6">
                            {{ this.employment.description|markdown }}
                        </div>
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
